          },
          "category": {
            "type": "string",
            "description": "Optional category for the connection."
          },
          "metadataUserID": {
            "type": "string",
            "description": "Optional metadata user ID."
          },
          "shouldValidate": {
            "type": "boolean",
            "description": "Whether to validate the connection. Defaults to true.",
